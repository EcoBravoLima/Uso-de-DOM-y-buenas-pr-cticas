function crearTabla(filas, columnas) {
    let html = "<table>";
    for (let i = 0; i < filas; i++) {
        html += "<tr>";
        for (let j = 0; j < columnas; j++) {
            html += `<td>F${i + 1}C${j + 1}</td>`;
        }
        html += "</tr>";
    }
    html += "</table>";
    document.getElementById("tabla-container").innerHTML = html;
}
*/

